# === Envviroment configuration ===
# Valid values: Development or Production
# Development: Shows detailed errors, no HTTPS redirect
# Production: Hides error details, enforces HTTPS
ASPNETCORE_ENVIRONMENT=Development

# === Database connection ===
CONNECTION_STRING=Server=YOUR_DB_HOST;Database=YOUR_DB_NAME;User=YOUR_DN_USER;Password=YOUR_DB_PASSWORD;TreatTinyAsBoolean = false;

# === Proxy Configuration ===
# If running behind a reverse proxy (nginx, traefik, etc), configure this:
#
# OPTION A - Specific Proxy IPs (RECOMMENDED for production):
# Set the IP addresses of your reverse proxy/load balancer
# Example: KNOWN_PROXIES=172.17.0.1,10.0.0.1
# KNOWN_PROXIES=
#
# OPTION B - Trust All Proxies (INSECURE, only for dev/testing):
# Allows any proxy to set forwarded headers (security risk!)
# TRUST_ALL_PROXIES=false

# === HTTPS Configuration ===
# Only set to true if running WITHOUT a reverse proxy (not recommended) and ASPNETCORE_ENVIRONMENT is set to Development
# When behind nginx/traefik/caddy, keep this false - the proxy handles HTTPS
ENFORCE_HTTPS_REDIRECT=false

# === CORS Configuration ===
# Comma-separated list of allowed origins for CORS
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# For same-origin setup (SPA served from same domain), leave empty
ALLOWED_ORIGINS=

# Secret for log pseudonymization (generate with: openssl rand -base64 32)
LOG_HASH_SECRET=doODuZWX3n0Ie4U+NYlNcuwDoXS0LMWi09safVXutR8=

# === Migration Configuration ===
# Wether to start initial migration (data tables and default data creation)
# Set to true for FIRST START ONLY, then change to false
MIGRATION_ON_STARTUP=false

# === Default Admin User ===
# These credentials will be used to create the initial admin user if it doesn't exist
# WARNING: Change these credentials immediately after first login!
# Use a strong password (20+ characters) for production!
DEFAULT_ADMIN_USERNAME=super.admin
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# === Email Configuration ===
# SMTP server settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USE_SSL=true
SMTP_USERNAME=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=Your Application Name
# send an welcome email after registration and successful email confirmation
SEND_WELCOME_MAIL_AFTER_EMAILCONFIRMATION=false

# Email background service settings
EMAIL_PROCESSING_INTERVAL_SECONDS=30
EMAIL_MAX_RETRY_ATTEMPTS=3
EMAIL_RETRY_DELAY_MINUTES=1,5,15

# === application settings ===
# show register link on login page
SHOW_REGISTER_LINK_ON_LOGIN_PAGE=true
# show forgot password link on login page
SHOW_FORGOT_PASSWORD_LINK_ON_LOGIN_PAGE=true

# === Request Logging Configuration ===
# Enable or disable request logging
REQUEST_LOGGING_ENABLED=false
# Log request bodies (for POST, PUT, PATCH requests)
REQUEST_LOGGING_LOG_REQUEST_BODIES=true
# Log response bodies
REQUEST_LOGGING_LOG_RESPONSE_BODIES=false
# Log request headers
REQUEST_LOGGING_LOG_HEADERS=false
# HTTP methods to include in request body logging
REQUEST_LOGGING_INCLUDED_METHODS=POST,PUT,PATCH
# Paths to exclude from logging (comma-separated)
REQUEST_LOGGING_EXCLUDED_PATHS=/auth/me,/favicon.ico,/icons.svg,/app.css
# Headers to exclude from logging (comma-separated)
REQUEST_LOGGING_EXCLUDED_HEADERS=Authorization,Cookie
# Maximum request body size in bytes (default: 10KB)
REQUEST_LOGGING_MAX_REQUEST_BODY_SIZE=10240
# Maximum response body size in bytes (default: 10KB)
REQUEST_LOGGING_MAX_RESPONSE_BODY_SIZE=10240