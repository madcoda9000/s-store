{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "checkJs": true,
    "strict": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM"],
    "baseUrl": "./wwwroot",
    "paths": {
      "/js/*": ["js/*"]
    }
  },
  "include": [
    "wwwroot/js/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot/js/**/*-min.js"
  ]
}
